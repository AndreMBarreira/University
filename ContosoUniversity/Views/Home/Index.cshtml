@{
    ViewData["Title"] = "Home Page";
}
<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/lib/images/University1.jpg" class="d-block w-100" alt="Welcome to Contoso University">
        </div>
        <div class="carousel-item">
            <img src="~/lib/images/University2.jpg" class="d-block w-100" alt="Contoso University is a sample application that
            demonstrates how to use Entity Framework Core in an
            ASP.NET Core MVC web application.">
        </div>
        <div class="carousel-item">
            <img src="~/lib/images/University3.jpg" class="d-block w-100" alt="Be smart">
        </div>
    </div>
</div>

